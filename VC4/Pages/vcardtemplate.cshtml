@page
@model RST.Model.VisitingCardDetail
@{
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Model.Company - @Model.TagLine</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        .card-container {
            max-width: 800px;
            min-height: 100vh;
            /* margin: 2rem auto;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); */
        }

        .header-yellow {
            background-color: #ffc107;
            padding: 2rem 1.5rem;
            text-align: center;
            color: #000;
        }

        .logo-text {
            font-size: 1.8rem;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .logo-subtext {
            font-size: 0.9rem;
            font-weight: 500;
        }

        .content-white {
            background-color: #ffffff;
            padding: 2rem 1.5rem;
        }

        .name-title {
            font-size: 2rem;
            font-weight: bold;
            color: #000;
            margin-bottom: 0.2rem;
        }

        .job-title {
            font-size: 1.2rem;
            color: #6c757d;
            margin-bottom: 2rem;
        }

        .contact-info p {
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

        .contact-info .icon {
            margin-right: 10px;
            color: #000;
        }

        .skyline {
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 200"><path fill="%23000000" d="M0,200 L0,150 L50,150 L50,160 L100,160 L100,140 L150,140 L150,170 L200,170 L200,130 L250,130 L250,180 L300,180 L300,150 L350,150 L350,190 L400,190 L400,160 L450,160 L450,180 L500,180 L500,170 L550,170 L550,190 L600,190 L600,160 L650,160 L650,130 L700,130 L700,180 L750,180 L750,140 L800,140 L800,170 L850,170 L850,150 L900,150 L900,180 L950,180 L950,160 L1000,160 L1000,200 Z"/></svg>') repeat-x bottom;
            height: 200px;
            background-size: contain;
        }
    </style>
</head>
<body>

    <div class="card-container mx-auto">
        <div class="header-yellow">
            <div class="d-flex align-items-center justify-content-center">
                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                    <img src="@Model.Logo" alt="Company Logo" class="img-fluid me-3" style="max-height: 80px; max-width: 80px; border-radius: 50%;">
                }
                <div>
                    @if (!string.IsNullOrEmpty(Model.Company))
                    {
                        <div class="logo-text">@Model.Company</div>
                    }
                    @if (!string.IsNullOrEmpty(Model.TagLine))
                    {
                        <div class="logo-subtext">@Model.TagLine</div>
                    }
                </div>
            </div>
        </div>
        <div class="content-white">
            @if (!string.IsNullOrEmpty(Model.PersonName))
            {
                <div class="name-title">@Model.PersonName</div>
            }
            @if (!string.IsNullOrEmpty(Model.Designation))
            {
                <div class="job-title">@Model.Designation</div>
            }
            <div class="contact-info mt-4">
                @if (!string.IsNullOrEmpty(Model.Phone1))
                {
                    <p class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-phone icon" viewBox="0 0 16 16">
                            <path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h6zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z" />
                            <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                        </svg>
                        @Model.Phone1
                    </p>
                }
                @if (!string.IsNullOrEmpty(Model.Phone2))
                {
                    <p class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-phone icon" viewBox="0 0 16 16">
                            <path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h6zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z" />
                            <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                        </svg>
                        @Model.Phone2
                    </p>
                }
                @if (!string.IsNullOrEmpty(Model.Phone3))
                {
                    <p class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-phone icon" viewBox="0 0 16 16">
                            <path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h6zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z" />
                            <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                        </svg>
                        @Model.Phone3
                    </p>
                }
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    <p class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-envelope icon" viewBox="0 0 16 16">
                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383-4.758 2.855L15 11.218V5.383zm-.004 6.617L8 10.005l-7.996 4.004L1 11.218l4.758-2.855L1 5.383V12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-.004z" />
                        </svg>
                        @Model.Email
                    </p>
                }
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <p class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-geo-alt icon" viewBox="0 0 16 16">
                            <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                        </svg>
                        @Model.Address
                    </p>
                }
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.Youtube) || !string.IsNullOrEmpty(Model.Instagram) ||
                !string.IsNullOrEmpty(Model.LinkedIn) ||
                !string.IsNullOrEmpty(Model.Twitter) ||
                !string.IsNullOrEmpty(Model.Facebook) ||
                !string.IsNullOrEmpty(Model.WhatsApp) ||
                !string.IsNullOrEmpty(Model.Telegram))
        {
            <div class="header-yellow">
                <div class="d-flex align-items-center justify-content-center">
                    @if (!string.IsNullOrEmpty(Model.WhatsApp))
                    {
                        <div class="me-2 flex-fill">
                            <a href="https://wa.me/@Model.WhatsApp" class="text-dark" style="text-decoration:none; font-size:1.5rem;">
                                <i class="bi bi-whatsapp"></i>
                            </a>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Telegram))
                    {
                        <div class="me-2 flex-fill">
                            <a href="https://t.me/@Model.Telegram" class="text-dark" style="text-decoration:none; font-size:1.5rem;">
                                <i class="bi bi-telegram"></i>
                            </a>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Facebook))
                    {
                        <div class="me-2 flex-fill">
                            <a href="@Model.Facebook" class="text-dark" style="text-decoration:none; font-size:1.5rem;">
                                <i class="bi bi-facebook"></i>
                            </a>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Youtube))
                    {
                        <div class="me-2 flex-fill">
                            <a href="@Model.Youtube" class="text-dark" style="text-decoration:none; font-size:1.5rem;">
                                <i class="bi bi-youtube"></i>
                            </a>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Twitter))
                    {
                        <div class="me-2 flex-fill">
                            <a href="@Model.Twitter" class="text-dark" style="text-decoration:none; font-size:1.5rem;">
                                <i class="bi bi-twitter"></i>
                            </a>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.LinkedIn))
                    {
                        <div class="me-2 flex-fill">
                            <a href="@Model.LinkedIn" class="text-dark" style="text-decoration:none; font-size:1.5rem;">
                                <i class="bi bi-linkedin"></i>
                            </a>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Instagram))
                    {
                        <div class="me-2 flex-fill">
                            <a href="@Model.Instagram" class="text-dark" style="text-decoration:none; font-size:1.5rem;">
                                <i class="bi bi-instagram"></i>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.AboutInfo))
        {
            <div class="content-white" style="text-align:justify;">
                @Model.AboutInfo
            </div>   
        }
        @* <div class="skyline"></div> *@
    </div>
</body>
</html>