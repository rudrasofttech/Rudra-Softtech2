@page

@{
    Layout = null;
    var Model = new RST.Model.VisitingCardDetail();
    Model.Company = "Rudra Softtech LLP";
    Model.TagLine = "Excellence @ Service";
    Model.PersonName = "Deepak Kumar";
    Model.Designation = "Software Engineer";
    Model.Phone1 = "123-456-7890";
    Model.Phone2 = "098-765-4321";
    Model.Phone3 = "555-555-5555";
    Model.Email = "youremail@email.com";
    Model.Address = "123 Main St, City, Country";
    Model.Logo = "https://fieldhouseproductions.com/wp-content/uploads/2022/06/white_logo_transparent_background.png";
    Model.Youtube = "https://www.youtube.com/channel/yourchannel"; // Replace with your YouTube URL
    Model.Instagram = "https://www.instagram.com/yourprofile"; // Replace with your Instagram URL
    Model.LinkedIn = "https://www.linkedin.com/in/yourprofile"; // Replace with your LinkedIn URL
    Model.Twitter = "https://twitter.com/yourprofile"; // Replace with your Twitter URL
    Model.Facebook = "https://www.facebook.com/yourprofile"; // Replace with your Facebook URL
    Model.WhatsApp = "1234567890"; // Replace with your WhatsApp number
    Model.Telegram = "yourtelegramusername"; // Replace with your Telegram username
    Model.AboutInfo = "";

}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Model.Company - @Model.TagLine</title>
    <meta name="description" content="@Model.AboutInfo" />
    <meta property="og:title" content="@Model.Company - @Model.TagLine" />
    <meta property="og:description" content="@Model.AboutInfo" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: "Montserrat", Arial;
        }

        .text-primary {
            color: #00275b !important;
        }

        .text-secondary {
            color: #c5d1eb !important;
        }

        .bluematrixbg {
            background-image: url(https://www.rudrasofttech.com/drive/uwstheme/bluearon/blue-matrix-bg.jpg);
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="container-fluid g-0" style="">
        <div class="row g-0">
            <div class="col-lg-6 d-none border-end d-lg-block bluematrixbg " style="min-height: 100vh;">
                <div class="d-flex flex-column w-100" style="height:100%">
                    <div class="text-center p-3 fs-2"><i class="bi bi-caret-down-fill text-white"></i></div>
                    <div class="flex-grow-1">
                        <div class="d-flex flex-column align-items-center justify-content-center" style="height:100%">
                            @if (!string.IsNullOrEmpty(Model.Logo))
                            {
                                <img src="@Model.Logo" alt="Centered Image" class="img-fluid" style="max-width: 200px;;max-height:200px;">
                            }
                            @if (!string.IsNullOrEmpty(Model.Company))
                            {
                                <div class="text-white fs-1 text-uppercase" style="letter-spacing:3px;">@Model.Company</div>
                            }
                            @if (!string.IsNullOrEmpty(Model.TagLine))
                            {
                                <div class="text-white mb-5 fs-5 fw-light" style="letter-spacing:3px;">@Model.TagLine</div>
                            }
                            @if (!string.IsNullOrEmpty(Model.WhatsApp))
                            {
                                <div class=" text-center">
                                    <a href="https://wa.me/@Model.WhatsApp" class="text-white fs-3" style="text-decoration:none;">
                                        <i class="bi bi-whatsapp"></i> Chat on WhatsApp
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="text-center p-3 fs-2"><i class="bi bi-caret-up-fill text-white"></i></div>
                </div>
            </div>
            <div class="col-lg col-md-12" style="min-height:100vh">
                <div class="w-100 d-flex flex-column bluematrixbg p-lg-3 p-2" style="min-height:50vh;">
                    <div class="row g-0 flex-grow-1 align-items-start">
                        <div class="col-11">
                            @if (!string.IsNullOrEmpty(Model.Logo))
                            {
                                <img src="@Model.Logo" alt="Centered Image" class="img-fluid  d-lg-none" style="max-width: 100px;max-height:100px;">
                            }
                            @if (!string.IsNullOrEmpty(Model.Company))
                            {
                                <div class="text-white fs-4 text-uppercase d-lg-none" style="letter-spacing:3px;">@Model.Company</div>
                            }
                            @if (!string.IsNullOrEmpty(Model.TagLine))
                            {
                                <div class="text-white mb-5 fs-5 fw-light d-lg-none" style="letter-spacing:3px;">@Model.TagLine</div>
                            }
                        </div>
                        <div class="col-1">
                            <i class="bi bi-caret-left-fill text-white fs-2"></i>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.PersonName))
                    {
                        <div class="fs-3 text-white fw-bold text-uppercase">@Model.PersonName</div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Designation))
                    {
                        <div class="mb-3 fs-5 text-white fw-light">@Model.Designation</div>
                    }

                </div>
                <div class="text-end text-primary p-lg-5 p-4">
                    @if (!string.IsNullOrEmpty(Model.Phone1))
                    {
                        <p class="mb-1 fw-bold fs-6">
                            @Model.Phone1
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Phone2))
                    {
                        <p class="mb-1 fw-bold fs-6">
                            @Model.Phone2
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Phone3))
                    {
                        <p class="mb-1 fw-bold fs-6">

                            @Model.Phone3
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <p class="mb-1 fw-bold fs-6">

                            @Model.Email
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <p class="mb-1 fw-bold fs-6">

                            @Model.Address
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Youtube) || !string.IsNullOrEmpty(Model.Instagram) ||
                                        !string.IsNullOrEmpty(Model.LinkedIn) ||
                                        !string.IsNullOrEmpty(Model.Twitter) ||
                                        !string.IsNullOrEmpty(Model.Facebook) ||
                                        !string.IsNullOrEmpty(Model.WhatsApp) ||
                                        !string.IsNullOrEmpty(Model.Telegram))
                    {
                        <div class="d-flex align-items-center justify-content-end my-2">
                            @if (!string.IsNullOrEmpty(Model.Telegram))
                            {
                                <div class="mx-2  text-center">
                                    <a href="https://t.me/@Model.Telegram" class="text-primary fs-5" style="text-decoration:none;">
                                        <i class="bi bi-telegram"></i>
                                    </a>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Facebook))
                            {
                                <div class="mx-2  text-center">
                                    <a href="@Model.Facebook" class="text-primary fs-5" style="text-decoration:none;">
                                        <i class="bi bi-facebook"></i>
                                    </a>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Youtube))
                            {
                                <div class="mx-2  text-center">
                                    <a href="@Model.Youtube" class="text-primary fs-5" style="text-decoration:none;">
                                        <i class="bi bi-youtube"></i>
                                    </a>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Twitter))
                            {
                                <div class="mx-2  text-center">
                                    <a href="@Model.Twitter" class="text-primary fs-5" style="text-decoration:none;">
                                        <i class="bi bi-twitter"></i>
                                    </a>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.LinkedIn))
                            {
                                <div class="mx-2  text-center">
                                    <a href="@Model.LinkedIn" class="text-primary fs-5" style="text-decoration:none;">
                                        <i class="bi bi-linkedin"></i>
                                    </a>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Instagram))
                            {
                                <div class="mx-2  text-center">
                                    <a href="@Model.Instagram" class="text-primary fs-5" style="text-decoration:none;">
                                        <i class="bi bi-instagram"></i>
                                    </a>
                                </div>
                            }

                        </div>
                        @if (!string.IsNullOrEmpty(Model.WhatsApp))
                        {
                            <div class=" text-end d-lg-none">
                                <a href="https://wa.me/@Model.WhatsApp" class="text-primary fs-5" style="text-decoration:none;">
                                    <i class="bi bi-whatsapp"></i> Chat on WhatsApp
                                </a>
                            </div>
                        }
                    }
                </div>

                @if (!string.IsNullOrEmpty(Model.AboutInfo))
                {
                    <div class="text-primary py-lg-3 px-5 py-3 fw-light text-end">
                        @Model.AboutInfo
                    </div>
                }
                @if (Model.Photos != null && Model.Photos.Count > 0)
                {
                    <div class="row g-1 w-100 justify-content-center">
                        @foreach (var p in Model.Photos)
                        {
                            <div class="col-lg-1 col-2">
                                <img src="@p.Photo" alt="@p.Title" class="img-fluid" />
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>