@using RST.Helper_Code;
@using RST.Models;

<!DOCTYPE html>
<html>
<head>
    @RenderSection("top", required: false)
    @Html.Raw(Utility.GetSiteSetting("CommonHeadContent"))
    @RenderSection("head", required: false)
</head>
<body>
    @Html.Raw(Utility.GetSiteSetting("SiteHeader"))
    <section id="subintro">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <ul class="breadcrumb">
                        <li>
                            <a href="http://www.rudrasofttech.com"><i class="icon-home"></i></a><i class="icon-angle-right">
                            </i>
                        </li>
                        <li class="active">Blog</li>
                    </ul>
                </div>
                <div class="span4">
                </div>
            </div>
        </div>
    </section>
    <section id="Section1">
        <div class="container">
            <div class="row">
                <div class="span4">
                    <aside>
                        <div class="widget">
                            <h4 class="rheading">
                                Categories<span></span>
                            </h4>
                            <ul class="cat">
                                @foreach (Category c in Utility.CategoryList())
                                {
                                    if (c.Status == MemberStatus.Active)
                                    {
                                        <li>
                                            <a href="@string.Format("{0}/blog/{1}/index", Utility.SiteURL, c.UrlName)">
                                                @c.Name
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                        <div class="widget">
                            <h4 class="rheading">
                                Responsive jQuery Plugins<span></span>
                            </h4>
                            <ul class="cat">
                                <li><a href="http://www.rudrasofttech.com/modalbox">ModalBox</a> </li>
                                <li><a href="http://www.rudrasofttech.com/photozoom">PhotoZoom</a> </li>
                                <li><a href="http://www.rudrasofttech.com/slideshow">SlideShow</a> </li>
                                <li><a href="http://www.rudrasofttech.com/scrollbar">scrollbar</a></li>
                                <li><a href="http://www.rudrasofttech.com/bubble">Bubble</a></li>
                                <li><a href="http://www.rudrasofttech.com/tooltip">Tooltip</a></li>
                                <li><a href="http://www.rudrasofttech.com/dragable">Dragable</a></li>
                                <li><a href="http://www.rudrasofttech.com/swipe">Swipe</a></li>
                            </ul>
                        </div>
                        <div class="widget hidden-phone">
                            <p>
                                Keep track of our BLOG UPDATES via our facebook page.
                            </p>
                            <iframe src="//www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2Frudrasofttech&amp;width=250&amp;height=290&amp;show_faces=true&amp;colorscheme=light&amp;stream=false&amp;border_color&amp;header=true&amp;appId=490407121012387"
                                    scrolling="no" frameborder="0" style="border: none; overflow: hidden; width: 250px;
                                height: 290px;" allowtransparency="true"></iframe>
                        </div>
                    </aside>
                </div>
                <div class="span8">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>

    @Html.Raw(Utility.GetSiteSetting("SiteFooter"))
</body>
</html>
